import type { Char } from '../types/types';
import Character from '../components/got/character.astro';
import DATA from '../data/data.json';

console.log(DATA);
---

<Layout>
    <div>
        <ul>
            {DATA.map((item) => <Character character={item as Char} />)}
        </ul>
    </div>
    <Comunicaciones />
</Layout>

<style>
    div {
        display: grid;
        grid-template-columns: 1fr;
        min-height: 100vh;
        align-items: center;
        /* width: 100%; */
        margin-inline: 1rem;
        margin-block: 1rem;
    }

